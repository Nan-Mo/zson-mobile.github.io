{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "zson": ["src/index.tsx"],
      "zson/es/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["react", "react-dom", "node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "es", "**/__tests__/**", "tests"],
  "compileOnSave": false
}
